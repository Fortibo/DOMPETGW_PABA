<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_top_corner_shadow_radius_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--  Category chooser Layout  -->
    <LinearLayout
        android:id="@+id/clBottomHalf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/TypePickerLayout"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/selectorTitleCard"
            app:cardCornerRadius="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="#C7F9BB"
            >
            <TextView
                android:id="@+id/selectorTitleTv"
                android:textColor="@color/black"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textSize="16sp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:textColor="#BBBBBB"
            android:id="@+id/selectorSubTitleTv"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earned Income"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>